<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="750" prefWidth="1000"
            fx:controller="org.achjaj.ju.MainWindow">
    <top>
        <ToolBar>
            <Button text="Open project" onAction="#openProject" />
            <MenuButton text="New terminal">
                <items>
                    <MenuItem text="Julia REPL" onAction="#addTerminal"/>
                    <MenuItem text="System" onAction="#addTerminal"/>
                </items>
            </MenuButton>
        </ToolBar>
    </top>
    <center>
        <SplitPane orientation="HORIZONTAL">
            <SplitPane orientation="VERTICAL">
                <TabPane fx:id="mainTabs"/>
                <TabPane fx:id="termTabs"/>
            </SplitPane>

            <SplitPane orientation="VERTICAL">
                <ListView fx:id="workspaceView"/>
                <TreeView fx:id="projectExplorer" />
            </SplitPane>
        </SplitPane>
    </center>

</BorderPane>
